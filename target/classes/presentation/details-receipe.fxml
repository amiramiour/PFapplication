<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="presentation.DetailsReceipeController">

    <!-- Ajouter l'image en arrière-plan -->
    <ImageView fitHeight="400.0" fitWidth="705.0">
        <image>
            <Image url="@../images/bg.jpeg" />
        </image>
    </ImageView>


    <!-- ChoiceBox pour les titres des recettes -->
    <ChoiceBox fx:id="recipeTitlesBox" layoutX="37.0" layoutY="44.0" prefHeight="25.0" prefWidth="239.0" />

    <!-- Bouton pour afficher les détails de la recette sélectionnée -->
    <Button fx:id="showDetailsButton" layoutX="167.0" layoutY="82.0" mnemonicParsing="false" onAction="#onShowDetailsClicked" text="Show details" />

    <!-- Zone de texte pour afficher les détails de la recette -->
    <TextArea fx:id="recipeDetailsArea" layoutX="39.0" layoutY="120.0" prefHeight="200.0" prefWidth="239.0" />
    <Button fx:id="backButton" layoutX="39.0" layoutY="332.0" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
</AnchorPane>
